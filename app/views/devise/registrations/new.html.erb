<h2>Sign up</h2>

<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'col-md-5'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-user"></i></span>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email address", class: 'form-control' %>
    </div>

    <% if @minimum_password_length %>
    <div class="input-group">
    <% else %>
    <div class="input-group mb-5">
    <% end %>
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-key"></i></span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "new password", class: 'form-control', 'aria-describedby': 'passwordHelpBlock' %>
    </div>
    <% if @minimum_password_length %>
      <small id="passwordHelpBlock" class="form-text text-muted">
        Your password needs to be at least <b><%= @minimum_password_length %></b> characters long.
      </small>
    <% end %>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-key"></i></span>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "repeat new password", class: 'form-control' %>
    </div>

    <div class="actions mb-3">
      <%= f.button "Sign up", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>

<div class="devise_links row mb-3">
  <div class="col-md-5">
    <%= render "devise/shared/links" %>
  </div>
</div>
